<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:orientation="vertical"
    android:padding="20dp" >

    <ImageView
        android:id="@+id/signin_gmail_iv_id"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/signin_gmail" />

    <ImageView
        android:id="@+id/signup_facebbok_iv_id"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/signup_facebook" />

    <Button
        android:id="@+id/readmore_bt_id"
        android:layout_width="fill_parent"
        android:layout_height="55dp"
        android:background="@drawable/rounded_submit_button"
        android:gravity="center"
        android:text="Download From Here"
        android:layout_marginTop="20dp"
        android:textColor="#ffffff"
        android:textSize="22dp"
        android:textStyle="bold" />

</LinearLayout>