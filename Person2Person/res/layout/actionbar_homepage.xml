<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp" >

    <LinearLayout
        android:id="@+id/layout_resize"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/layout_live"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/community_color" >

            <Button
                android:id="@+id/activity_main_content_button_menu"
                android:layout_width="45dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:gravity="center|left"
                android:background="@drawable/slider_buttonwt"/>
            
 

            <TextView
                android:id="@+id/content_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="PERSON 2 PERSSON"
                android:textColor="#ffffff"
                android:textSize="22dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/back_button"
                android:layout_width="60dp"
                android:layout_height="fill_parent" >
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>